<div class="main_container">
<h3>スケジュール新規作成</h3>
 
    <%= form_for @post do |f| %> 
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_date ,"開始日" %></th>
          <td><%= f.date_field :start_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_date ,"終了日" %></th>
          <td><%= f.date_field :end_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :all_day ,"終日" %></th>
          <td><%= f.check_box :all_day %>終日の場合はチェックを入れます</td>
        </tr>
        
        <tr>
          <th><%= f.label :note ,"スケジュールメモ" %></th>
          <td><%= f.text_area :note %></td>
        </tr>
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "スケジュールを新規登録する"%></li> <!--サブミットボタン（f.submit)送信ボタンを作成する-->
          <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
        </ul>
      </div>
    <% end %>
</div>
